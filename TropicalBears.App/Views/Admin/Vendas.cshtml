@model IEnumerable<TropicalBears.Model.DataBase.Model.Venda>

@{
    ViewBag.Title = "Vendas";
}

<h2>Vendas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ValorTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            Cliente
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ValorTotal)
        </td>
        <td>
            @item.Data.Date.ToString("dd/MM/yyyy")
        </td>
        @if (@item.Status == 1)
        {
            <td>
                Pagamento Confirmado
            </td>
        }else if (@item.Status == 0)
        {
            <td>
                Aguardando Pagamento
            </td>
        }
        <td>
            @item.Carrinho.Usuario.Nome
        </td>
        <td>
            <a href="/admin/venda/@item.Id"><span class="glyphicon glyphicon-eye-open"></span></a>  
        </td>
    </tr>
}

</table>
