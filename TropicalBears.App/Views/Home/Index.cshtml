@model IEnumerable<TropicalBears.Model.DataBase.Model.Estoque>

@{
    ViewBag.Title = "Index";
}
<hr />
<div class="row">

    @using (Html.BeginForm("Buscar", "Home", FormMethod.Post))
    {
        <div class="row">

            <div class="col-lg-3">
                <input type="text" class="form-control" style="width:100%" name="busca" placeholder="Nome do Produto" />
            </div>

            <!--ADVANCED SEARCH-->

            <div class="col-lg-2">
                <input type="number" class="form-control" style="width:100%" name="min" placeholder="Preço Minimo" />
            </div>

            <div class="col-lg-2">
                <input type="number" class="form-control" style="width:100%" name="max" placeholder="Preço Máximo" />
            </div>
            <div class="col-lg-2">
                <button class="btn btn-block" onclick=""><span class="glyphicon glyphicon-search"></span> BUSCAR</button>
            </div>
        </div>

       <!--<div class="col-lg-3">
            <input type="text" class="form-control" style="width:100%" name="busca"  />
        </div>
        <div class="col-lg-2">
            <input type="submit" value="BUSCAR" class="form-control btn-block" />
       </div>--> 

        
           
    }

</div>

<hr />
<div class="row"></div>
<div class="row ">

    @foreach (var item in Model)
    {

       if (item.Produto.Imagens != null && item.Produto.Imagens.Count > 0)
        {

            <div class="col-lg-3">
                <a href="/Home/Details/@item.Id">
                    <img src="~/Upload/@item.Produto.Imagens.First().Img" class="img-responsive" />
                </a>

                <h4>@item.Produto.Nome</h4>
                <h4>R$@item.getPreco()</h4>
                <p>@item.Produto.Descricao</p>
            </div>

        }

    }

</div>
